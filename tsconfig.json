{
  "compilerOptions": {
    "composite": true,

    "target": "es2022",
    "lib": ["es2022", "dom", "dom.iterable"],

    "moduleDetection": "force",
    "module": "preserve",

    "strict": true,
    "noImplicitOverride": true,
    "noUncheckedIndexedAccess": true,

    "declaration": true,
    "declarationMap": true,
    "noEmit": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  }
}
